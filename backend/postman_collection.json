              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/progress/:contentId/start",
              "host": ["{{base_url}}"],
              "path": ["progress", ":contentId", "start"],
              "variable": [
                {
                  "key": "contentId",
                  "value": "YOUR_CONTENT_ID_HERE"
